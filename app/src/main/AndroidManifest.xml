<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS" />
    <uses-permission android:name="android.permission.BIND_APPWIDGET" />
    <uses-permission android:name="android.permission.BIND_APPWIDGET_SERVICE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AgentOS"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:clearTaskOnLaunch="true"
            android:stateNotNeeded="true"
            android:excludeFromRecents="false"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.AgentOS"
            android:screenOrientation="portrait">
            <!-- Home launcher intent filter -->
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <!-- Solana Action deep link -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="solana-action" />
            </intent-filter>
        </activity>
        
        <!-- Transparent Overlay Activity -->
        <activity
            android:name=".OverlayActivity"
            android:exported="false"
            android:theme="@style/Theme.AgentOS_Overlay"
            android:excludeFromRecents="true"
            android:taskAffinity=""
            android:launchMode="standard" />
        
        <!-- Conversation History Activity -->
        <activity
            android:name=".ConversationHistoryActivity"
            android:exported="false"
            android:theme="@style/Theme.AgentOS_Dark"
            android:screenOrientation="portrait" />
        
        <!-- MCP Tool Invocation Activity -->
        <activity
            android:name=".McpToolInvocationActivity"
            android:exported="false"
            android:theme="@style/Theme.AgentOS_Dark"
            android:screenOrientation="portrait" />
        
        <!-- MCP App Details Activity -->
        <activity
            android:name=".McpAppDetailsActivity"
            android:exported="false"
            android:theme="@style/Theme.AgentOS_Dark"
            android:screenOrientation="portrait" />
        
        <!-- Custom Widget Picker -->
        <activity
            android:name=".CustomWidgetPickerActivity"
            android:exported="false"
            android:theme="@style/Theme.AgentOS_Dark" />
        
        <!-- Widget support -->
        <receiver android:name=".AgentOSWidgetProvider"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                android:resource="@xml/agentos_widget_info" />
        </receiver>
        
        <!-- Floating Overlay Service -->
        <service
            android:name=".FloatingOverlayService"
            android:exported="false" />
    </application>

</manifest>