<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">

    <!-- Header with Agent Icon and Back Button -->
    <FrameLayout
        android:id="@+id/headerBanner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#1C1C1E">

        <!-- Agent Icon (Large, centered) -->
        <ImageView
            android:id="@+id/agentIconLarge"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:background="@drawable/agent_profile_background"
            android:contentDescription="Agent Icon" />

        <!-- Back button overlay -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:text="â†"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:background="#801C1C1E"
            android:padding="0dp" />

    </FrameLayout>

    <!-- Agent Name and Creator -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/agentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agent Name"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/agentCreator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="by Creator"
            android:textColor="#888888"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <!-- Tab Layout -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        app:tabTextColor="#888888"
        app:tabSelectedTextColor="@android:color/white"
        app:tabIndicatorColor="@android:color/white"
        app:tabMode="fixed"
        app:tabGravity="fill" />

    <!-- Subtle divider below tabs -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/section_divider" />

    <!-- ViewPager for Tab Content -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>