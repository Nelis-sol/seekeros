<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Wallet Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/dialog_background"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wallet Overview"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/walletAddressOverview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Not connected"
                android:textColor="#888888"
                android:textSize="14sp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/input_background"
                android:padding="12dp"
                android:fontFamily="monospace"
                android:clickable="true"
                android:focusable="true" />

            <Button
                android:id="@+id/connectWalletButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="+ Connect Wallet"
                android:textColor="#888888"
                android:background="@drawable/primary_button_background"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Token Balance Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/dialog_background"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tokens"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- SOL Balance -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/input_background"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/pill_background"
                    android:src="@drawable/ic_crypto_portfolio"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SOL"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/solBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00 SOL"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/solValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0.00"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

            <!-- USDC Balance -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/input_background"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/pill_background"
                    android:src="@drawable/ic_stablecoins"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="USDC"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/usdcBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00 USDC"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/usdcValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0.00"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>


        </LinearLayout>

        <!-- Open Wallet App Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/dialog_background"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/openWalletAppFromTokensButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Open Wallet App"
                android:textColor="@android:color/white"
                android:background="@drawable/pill_button_background"
                android:textSize="16sp"
                android:textStyle="bold"
                android:enabled="false" />

        </LinearLayout>

        <!-- Test Transfer Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/dialog_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test Transaction"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send 0.0001 SOL to test address"
                android:textColor="#888888"
                android:textSize="14sp"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/sendTestTransferButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Send Test Transfer"
                android:textColor="@android:color/white"
                android:background="@drawable/primary_button_background"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="visible"
                android:enabled="false" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
