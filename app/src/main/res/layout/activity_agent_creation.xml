<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">

    <!-- Header with Back Button -->
    <FrameLayout
        android:id="@+id/headerBanner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#1C1C1E">

        <!-- Agent Icon Placeholder (centered) -->
        <ImageView
            android:id="@+id/agentIconPreview"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:background="@drawable/agent_profile_background"
            android:contentDescription="Agent Icon Preview" />

        <!-- Back button overlay -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:text="←"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:background="#801C1C1E"
            android:padding="0dp" />

        <!-- Save button overlay (top right) -->
        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="top|end"
            android:layout_margin="16dp"
            android:text="Save"
            android:textColor="@android:color/white"
            android:background="@drawable/pill_button_background"
            android:paddingStart="24dp"
            android:paddingEnd="24dp" />

    </FrameLayout>

    <!-- Form Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Basic Information Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/dialog_background"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Basic Information"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Agent Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agent Name *"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/agentNameInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="e.g., My Assistant"
                    android:textColor="#000000"
                    android:textColorHint="#888888"
                    android:background="@drawable/input_background"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp" />

                <!-- Creator Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Created By *"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/agentCreatorInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="e.g., Your Name"
                    android:textColor="#000000"
                    android:textColorHint="#888888"
                    android:background="@drawable/input_background"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp" />

                <!-- Description -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description *"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/agentDescriptionInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Brief description of your agent"
                    android:textColor="#000000"
                    android:textColorHint="#888888"
                    android:background="@drawable/input_background"
                    android:padding="12dp"
                    android:minLines="3"
                    android:gravity="top"
                    android:inputType="textMultiLine" />

            </LinearLayout>

            <!-- Personality Prompt Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/dialog_background"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Personality Prompt *"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Define how your agent behaves and interacts"
                    android:textColor="#888888"
                    android:textSize="12sp"
                    android:layout_marginBottom="12dp" />

                <EditText
                    android:id="@+id/personalityPromptInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="e.g., You are a helpful and friendly assistant..."
                    android:textColor="#000000"
                    android:textColorHint="#888888"
                    android:background="@drawable/input_background"
                    android:padding="12dp"
                    android:minLines="5"
                    android:gravity="top"
                    android:inputType="textMultiLine" />

            </LinearLayout>

            <!-- System Prompt Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/dialog_background"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="System Prompt *"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set the core instructions and capabilities"
                    android:textColor="#888888"
                    android:textSize="12sp"
                    android:layout_marginBottom="12dp" />

                <EditText
                    android:id="@+id/systemPromptInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="e.g., You have access to tools and can help with..."
                    android:textColor="#000000"
                    android:textColorHint="#888888"
                    android:background="@drawable/input_background"
                    android:padding="12dp"
                    android:minLines="5"
                    android:gravity="top"
                    android:inputType="textMultiLine" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

