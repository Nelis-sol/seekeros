<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:fitsSystemWindows="true">

    <!-- Hidden Tray (revealed on pull) -->
    <LinearLayout
        android:id="@+id/hiddenTray"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:padding="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/tray_bottom_border"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Agent Profiles Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="start|center_vertical">

            <!-- Agent 1 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="14dp">
                
                <View
                    android:id="@+id/agent1Profile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/agent_profile_background" />
                
                <TextView
                    android:id="@+id/agent1Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agent 1"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:layout_marginTop="3dp" />
            </LinearLayout>

            <!-- Agent 2 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="14dp">
                
                <View
                    android:id="@+id/agent2Profile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/agent_profile_background_2" />
                
                <TextView
                    android:id="@+id/agent2Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agent 2"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:layout_marginTop="3dp" />
            </LinearLayout>

            <!-- Agent 3 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="14dp">
                
                <View
                    android:id="@+id/agent3Profile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/agent_profile_background_3" />
                
                <TextView
                    android:id="@+id/agent3Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agent 3"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:layout_marginTop="3dp" />
            </LinearLayout>

            <!-- Add Agent Button -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                
                <ImageButton
                    android:id="@+id/addAgentButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/add_agent_background"
                    android:src="@drawable/ic_add"
                    android:scaleType="centerInside"
                    android:padding="8dp"
                    android:contentDescription="Add new agent" />
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:layout_marginTop="3dp" />
            </LinearLayout>

        </LinearLayout>

        <!-- Buttons Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="12dp">
            
            <ImageButton
                android:id="@+id/historyButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/history_button_background"
                android:src="@drawable/ic_history"
                android:contentDescription="View conversation history" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:layout_marginTop="3dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            
            <ImageButton
                android:id="@+id/newChatButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/new_chat_button_background"
                android:src="@drawable/ic_add"
                android:contentDescription="Start new chat" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Chat"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:layout_marginTop="3dp" />
        </LinearLayout>

    </LinearLayout>

    <!-- Right Edge Detection Zone (invisible, elevated to be above other views) -->
    <View
        android:id="@+id/rightEdgeDetector"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:elevation="10dp"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintTop_toBottomOf="@id/hiddenTray"
        app:layout_constraintBottom_toTopOf="@id/inputLayout"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Right Tray (revealed on right-edge swipe) -->
    <LinearLayout
        android:id="@+id/rightTray"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingTop="24dp"
        android:paddingBottom="16dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:background="@drawable/right_tray_left_border"
        android:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/hiddenTray"
        app:layout_constraintBottom_toTopOf="@id/inputLayout"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prompts"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Scrollable container for prompt squares -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/promptsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Saved Prompts Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Saved"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:alpha="0.6"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <!-- 5 Saved Prompt Squares with Titles -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/saved_prompt_background" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Work"
                        android:textColor="@android:color/white"
                        android:textSize="9sp"
                        android:gravity="center"
                        android:maxLines="1"
                        android:ellipsize="end" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/saved_prompt_background" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Personal"
                        android:textColor="@android:color/white"
                        android:textSize="9sp"
                        android:gravity="center"
                        android:maxLines="1"
                        android:ellipsize="end" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/saved_prompt_background" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Creative"
                        android:textColor="@android:color/white"
                        android:textSize="9sp"
                        android:gravity="center"
                        android:maxLines="1"
                        android:ellipsize="end" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/saved_prompt_background" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Code"
                        android:textColor="@android:color/white"
                        android:textSize="9sp"
                        android:gravity="center"
                        android:maxLines="1"
                        android:ellipsize="end" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/saved_prompt_background" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Research"
                        android:textColor="@android:color/white"
                        android:textSize="9sp"
                        android:gravity="center"
                        android:maxLines="1"
                        android:ellipsize="end" />
                </LinearLayout>

                <!-- New Prompts Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:alpha="0.6"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <!-- 10 New Prompt Squares with Titles -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/new_prompt_background" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Ideas"
                        android:textColor="@android:color/white"
                        android:textSize="9sp"
                        android:gravity="center"
                        android:maxLines="1"
                        android:ellipsize="end" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/new_prompt_background" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Notes"
                        android:textColor="@android:color/white"
                        android:textSize="9sp"
                        android:gravity="center"
                        android:maxLines="1"
                        android:ellipsize="end" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/new_prompt_background" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Tasks"
                        android:textColor="@android:color/white"
                        android:textSize="9sp"
                        android:gravity="center"
                        android:maxLines="1"
                        android:ellipsize="end" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/new_prompt_background" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Quick"
                        android:textColor="@android:color/white"
                        android:textSize="9sp"
                        android:gravity="center"
                        android:maxLines="1"
                        android:ellipsize="end" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/new_prompt_background" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Draft"
                        android:textColor="@android:color/white"
                        android:textSize="9sp"
                        android:gravity="center"
                        android:maxLines="1"
                        android:ellipsize="end" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/new_prompt_background" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Plan"
                        android:textColor="@android:color/white"
                        android:textSize="9sp"
                        android:gravity="center"
                        android:maxLines="1"
                        android:ellipsize="end" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/new_prompt_background" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Explore"
                        android:textColor="@android:color/white"
                        android:textSize="9sp"
                        android:gravity="center"
                        android:maxLines="1"
                        android:ellipsize="end" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/new_prompt_background" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Learn"
                        android:textColor="@android:color/white"
                        android:textSize="9sp"
                        android:gravity="center"
                        android:maxLines="1"
                        android:ellipsize="end" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/new_prompt_background" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Build"
                        android:textColor="@android:color/white"
                        android:textSize="9sp"
                        android:gravity="center"
                        android:maxLines="1"
                        android:ellipsize="end" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/new_prompt_background" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Test"
                        android:textColor="@android:color/white"
                        android:textSize="9sp"
                        android:gravity="center"
                        android:maxLines="1"
                        android:ellipsize="end" />
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <!-- Close Chat Button (for split-screen mode, hidden by default) -->
    <ImageButton
        android:id="@+id/closeChatButton"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="12dp"
        android:background="@drawable/pill_background_compact"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:contentDescription="Close chat"
        android:visibility="gone"
        android:elevation="8dp"
        android:tint="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/webView"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Tab Layout for Blinks vs Apps (shown only when cards visible) -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/cardTypeTabLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="?android:attr/colorBackground"
            app:tabMode="fixed"
            app:tabGravity="fill"
            app:tabSelectedTextColor="@android:color/white"
            app:tabTextColor="#888888"
            app:tabIndicatorColor="@android:color/white"
            app:tabIndicatorHeight="2dp"
            app:layout_constraintTop_toBottomOf="@id/hiddenTray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            
            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apps" />
                
            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blinks" />
                
        </com.google.android.material.tabs.TabLayout>

    <!-- SwipeRefreshLayout for pull-to-reveal tray -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/cardTypeTabLayout"
        app:layout_constraintBottom_toTopOf="@id/suggestionsScrollView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Main Content Container -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Chat Messages -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/chatRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:paddingBottom="180dp"
                android:clipToPadding="false"
                android:paddingTop="16dp" />

            <!-- Widget Display Area (shown when no messages) -->
            <ScrollView
                android:id="@+id/widgetDisplayArea"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

            </ScrollView>

        </FrameLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Custom Browser View (hidden by default) -->
    <WebView
        android:id="@+id/webView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:background="?android:attr/colorBackground"
        app:layout_constraintTop_toBottomOf="@id/hiddenTray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- App Suggestions Pills (Horizontally Scrollable) -->
    <HorizontalScrollView
        android:id="@+id/suggestionsScrollView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:paddingTop="12dp"
        android:paddingBottom="4dp"
        android:background="@android:color/black"
        android:elevation="8dp"
        android:visibility="gone"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@id/inputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/suggestionsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

    </HorizontalScrollView>

    <!-- Input Area -->
    <LinearLayout
        android:id="@+id/inputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:paddingBottom="32dp"
        android:background="?android:attr/colorBackground"
        android:elevation="4dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Browser Menu Button (hidden by default) -->
        <ImageButton
            android:id="@+id/browserMenuButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/pill_background_compact"
            android:src="@android:drawable/ic_menu_sort_by_size"
            android:contentDescription="Browser menu"
            android:visibility="gone"
            android:tint="@android:color/white" />

        <!-- Tab Manager Button (hidden by default) -->
        <ImageButton
            android:id="@+id/tabManagerButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/pill_background_compact"
            android:src="@android:drawable/ic_menu_agenda"
            android:contentDescription="Tab manager"
            android:visibility="gone"
            android:tint="@android:color/white" />

        <EditText
            android:id="@+id/messageInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Search apps or type message..."
            android:background="@drawable/input_background"
            android:padding="14dp"
            android:textSize="14sp"
            android:maxLines="3"
            android:inputType="textMultiLine|textCapSentences"
            android:imeOptions="actionSend" />

        <ImageButton
            android:id="@+id/sendButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/send_button_background"
            android:src="@drawable/ic_send"
            android:contentDescription="Send message" />

    </LinearLayout>

    <!-- Embedded App Container -->
    <FrameLayout
        android:id="@+id/embeddedAppContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:background="?android:attr/colorBackground"
        app:layout_constraintTop_toBottomOf="@id/hiddenTray"
        app:layout_constraintBottom_toTopOf="@id/inputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Job Grid Overlay -->
    <include
        android:id="@+id/jobGridOverlay"
        layout="@layout/job_grid_overlay"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>
