<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:padding="16dp">

    <!-- Menu Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Browser Menu"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- New Tab -->
    <LinearLayout
        android:id="@+id/newTabOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="@drawable/menu_item_background"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:focusable="true">
        
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_add"
            android:tint="@android:color/white" />
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="New Tab"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <!-- New Incognito Tab -->
    <LinearLayout
        android:id="@+id/newIncognitoTabOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="@drawable/menu_item_background"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:focusable="true">
        
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_view"
            android:tint="@android:color/white" />
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="New Incognito Tab"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <!-- Bookmarks -->
    <LinearLayout
        android:id="@+id/bookmarksOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="@drawable/menu_item_background"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:focusable="true">
        
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_agenda"
            android:tint="@android:color/white" />
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bookmarks"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <!-- History -->
    <LinearLayout
        android:id="@+id/historyOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="@drawable/menu_item_background"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:focusable="true">
        
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_recent_history"
            android:tint="@android:color/white" />
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="History"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <!-- Downloads -->
    <LinearLayout
        android:id="@+id/downloadsOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="@drawable/menu_item_background"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:focusable="true">
        
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_save"
            android:tint="@android:color/white" />
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Downloads"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <!-- Settings -->
    <LinearLayout
        android:id="@+id/settingsOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="@drawable/menu_item_background"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:focusable="true">
        
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_preferences"
            android:tint="@android:color/white" />
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Settings"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <!-- Close Browser -->
    <LinearLayout
        android:id="@+id/closeBrowserOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="@drawable/menu_item_background"
        android:clickable="true"
        android:focusable="true">
        
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:tint="@android:color/white" />
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Close Browser"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginStart="12dp" />
    </LinearLayout>

</LinearLayout>
