<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Email Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/dialog_background"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Inbox"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/emailAddressInbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Not generated"
                android:textColor="#888888"
                android:textSize="14sp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/input_background"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true" />

            <Button
                android:id="@+id/generateEmailInboxButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Generate Email"
                android:textColor="#888888"
                android:background="@drawable/primary_button_background"
                android:textSize="16sp"
                android:textStyle="bold"
                android:enabled="false" />

        </LinearLayout>

        <!-- Email List Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/dialog_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Messages"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Sample Email 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@drawable/input_background"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="From: support@agentos.ai"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 hours ago"
                        android:textColor="#666666"
                        android:textSize="12sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SeekerOS"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your agent is now ready to help you with tasks and conversations. You can start chatting right away!"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:maxLines="2"
                    android:ellipsize="end" />

            </LinearLayout>

            <!-- Sample Email 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@drawable/input_background"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="From: notifications@agentos.ai"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 day ago"
                        android:textColor="#666666"
                        android:textSize="12sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New Features Available"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Check out the latest updates to your agent's capabilities. New integrations are now available!"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:maxLines="2"
                    android:ellipsize="end" />

            </LinearLayout>

            <!-- No Emails State -->
            <TextView
                android:id="@+id/noEmailsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No emails found. Generate an email address to start receiving messages."
                android:textColor="#888888"
                android:textSize="14sp"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone" />

            <!-- Refresh Button -->
            <Button
                android:id="@+id/refreshEmailsButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Refresh Inbox"
                android:textColor="#888888"
                android:background="@drawable/primary_button_background"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:enabled="false" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
