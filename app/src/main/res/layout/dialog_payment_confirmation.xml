<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/dialog_background">

    <!-- Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Required"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Tool Name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tool"
        android:textColor="#888888"
        android:textSize="12sp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/toolNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get_premium_news"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <!-- Description -->
    <TextView
        android:id="@+id/paymentDescriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Access to premium news and analysis"
        android:textColor="#CCCCCC"
        android:textSize="14sp"
        android:layout_marginBottom="24dp" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/section_divider"
        android:layout_marginBottom="16dp" />

    <!-- Amount -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Amount"
            android:textColor="#888888"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/paymentAmountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.001 USDC"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Recipient (optional) -->
    <LinearLayout
        android:id="@+id/recipientLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Recipient"
            android:textColor="#888888"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/recipientText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="..."
            android:textColor="#CCCCCC"
            android:textSize="12sp"
            android:fontFamily="monospace" />

    </LinearLayout>

    <!-- Expires At (optional) -->
    <LinearLayout
        android:id="@+id/expiresAtLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Price Valid Until"
            android:textColor="#888888"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/expiresAtText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:30 AM"
            android:textColor="#FFAA00"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/section_divider"
        android:layout_marginBottom="24dp" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Cancel"
            android:textColor="#888888"
            android:background="@android:color/transparent"
            android:textSize="16sp"
            android:paddingHorizontal="24dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/payButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Pay Now"
            android:textColor="@android:color/white"
            android:background="@drawable/pill_button_background"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingHorizontal="32dp" />

    </LinearLayout>

</LinearLayout>

